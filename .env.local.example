# ==============================================
# Foco Diet Planner - Environment Variables
# ==============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ---- Clerk Authentication ----
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here

# Clerk routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/preferences

# ---- Convex Backend ----
NEXT_PUBLIC_CONVEX_URL=https://your-project.convex.cloud

# ---- Clerk JWT Issuer (for Convex auth) ----
CLERK_JWT_ISSUER_DOMAIN=https://verb-noun-00.clerk.accounts.dev

# ---- Web Scraping (choose one) ----

# Option 1: Browserbase (recommended)
BROWSERBASE_API_KEY=your_browserbase_api_key
BROWSERBASE_PROJECT_ID=your_browserbase_project_id

# Option 2: Firecrawl (alternative)
# FIRECRAWL_API_KEY=your_firecrawl_api_key

# ---- Target Website ----
FOCO_WEBSITE_URL=https://foco-website-url.com
